{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "deploy",
            "type": "shell",
            "command": "firebase deploy --only hosting",
            "problemMatcher": [],
            "dependsOn": [
                "build"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "serve",
            "type": "shell",
            "command": "firebase serve --only hosting",
            "problemMatcher": [],
            "dependsOn": [
                "build"
            ],
            "dependsOrder": "sequence",
            "options": {
                "statusbar": {
                    "hide": true
                }
            }
        },
        {
            "label": "build",
            "type": "npm",
            "script": "build",
            "path": "site/",
            "problemMatcher": [
                "$eslint-compact"
            ],
            "options": {
                "statusbar": {
                    "hide": true
                },
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "develop",
            "type": "npm",
            "script": "develop",
            "path": "site/",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "options": {
                "statusbar": {
                    "hide": false
                },
            },
        }
    ]
}